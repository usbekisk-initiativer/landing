extends ../layouts/LayoutTheme
include ../mixins/homes/Default.pug

block beforeMainContent
  +FancyNav({menu: 
  {
    "why us": "./one-page.html#defaultWhyUs",
    "services": "./one-page.html#defaultServices",
    "performance": "./one-page.html#defaultProgressbar",
    "pricing": "./one-page.html#defaultPricingPlan",
    "crews": "./one-page.html#defaultMembers",
    "gallery": "./one-page.html#defaultGallery",
    "contact": "./contact.html"
  }})(data-onscroll-fade-in=true)

prepend styles
  link(href=`${CWD}vendors/swiper/swiper-bundle.min.css`, rel='stylesheet')

prepend scripts
  script(src=`${CWD}vendors/swiper/swiper-bundle.min.js`)
  script(src=`${CWD}vendors/bigpicture/BigPicture.js`)
  script(src=`${CWD}vendors/progressbar/progressbar.min.js`)
  script(src=`${CWD}vendors/rellax/rellax.min.js`) 

append mainContent 
  +DefaultHeader
  +DefaultWhyUs
  +DefaultVideo
  +DefaultServices
  +DefaultProcess
  +DefaultCta1
  +DefaultProgressbar

  +DefaultCta2
  +DefaultPricingPlan
  +DefaultCta3
  +DefaultMembers
  +DefaultGallery
  +DefaultCta4
