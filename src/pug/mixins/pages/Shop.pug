mixin ShopHeader
  +Section({image: `${CWD}assets/img/shop-header.jpg`}).py-0#page-shop(data-zanim-xs!={
    delay: 0.4,
    animation: 'zoom-out'
  } data-zanim-trigger='scroll')
    .row
      .col-9.pt-11.pb-5
        .d-flex
          span.fas.fa-gift.text-white.fs-3
          .flex-1.ps-3
            .overflow-hidden
              h2.fs-5.text-white.display-4.font-base(data-zanim-xs!={delay: 0.6} data-zanim-trigger='scroll')
                span.fst-italic spotlight products
            .overflow-hidden
              h6.mb-0.text-white.ls-2.text-uppercase(data-zanim-xs!={delay: 0.8} data-zanim-trigger='scroll') A wide selection of items for you to choose

mixin ShopItems
  +Section
    .row
      .col-lg-6
        .py-9.h-100.position-relative.overflow-hidden 
          +Background({
            image: `${CWD}assets/img/necklace-01.jpg`,
            youtube: {
              videoId : '3pq5qQamsEo',
              startSeconds : 40,
              endSeconds : 270  
            },
            className: 'rounded '
          })
          
      .col-lg-6.ps-lg-4.ps-xl-6.mt-4.mt-lg-0
        h6.mb-1.text-body-tertiary
          del US $398.00 / piece
        .font-secondary.fs-8.mb-2
          span.text-warning.fw-black US $378.10
          span.fs-9 / piece
            span.badge.bg-danger.ms-2 -5%
        a(href=`${CWD}pages/product-single.html`).text-black
          h3.mb-0 Queen Brilliance Real 18K
        p.lead.font-secondary Yellow Gold AMAZING 1 Carat ct F Color Lab Grown Moissanite Diamond Pendant &amp; Necklace
