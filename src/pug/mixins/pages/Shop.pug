          li
            h6.fs-9.text-body-highlight.mb-1
              span.fw-bold Brand Name:
              span.fw-normal.ps-1 Queen Brilliance
          li
            h6.fs-9.text-body-highlight.mb-1
              span.fw-bold Fine or Fashion:
              span.fw-normal.ps-1 Fine
          li
            h6.fs-9.text-body-highlight.mb-1
