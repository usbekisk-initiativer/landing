          autoplay: {
            delay: 5000,
            disableOnInteraction: false,
          },
          loop: true,
          effect: 'fade',
          pagination: {
            el: ".swiper-pagination",
            clickable: true,
            type: 'bullets',
          },
        } data-zanim-lg!={animation: "zoom-out", delay: 0}  data-zanim-trigger='scroll')
          .swiper-wrapper
            .swiper-slide.overflow-hidden.rounded
              img.w-100.h-100.fit-cover(src=`${CWD}assets/img/watch-02.jpg` alt='')
            .swiper-slide.overflow-hidden.rounded
              img.w-100.h-100.fit-cover(src=`${CWD}assets/img/watch-01.jpg` alt='')
            .swiper-slide.overflow-hidden.rounded 
              img.w-100.h-100.fit-cover(src=`${CWD}assets/img/watch-03.jpg` alt='')
          .swiper-pagination
          .swiper-nav
            .swiper-button-next.me-md-3
            .swiper-button-prev.ms-md-3 

      .col-lg-6.ps-lg-4.ps-xl-6.mt-4.mt-lg-8
