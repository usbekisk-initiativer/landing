mixin BigcartelHeader
  +Section({
    image: `${CWD}assets/img/headers/bigcartel.jpg`,
    youtube: {
      videoId: "iZmwFlg8zqA",
      startSeconds: 0,
      endSeconds: 120,
    },
    className: "overlay overlay-1",
    attrs: {"data-zanim-xs": {delay: 0.4, animation: "zoom-out"}, "data-zanim-trigger": "scroll"}
  }).py-0.text-center#bigcartel-header
    
    .row.min-vh-100.flex-center.py-8
      .col-lg-7(data-zanim-timeline!={delay: 0.6} data-zanim-trigger="scroll")
        img(src=`${CWD}assets/img/bigcartel.png` alt="" data-zanim-xs!={delay: 0.0, from: {opacity: 0}, to: {opacity: 1}}).img-fluid
        .overflow-hidden.mb-4
          p.text-white.px-lg-6.font-secondary(data-zanim-xs!={delay: 0.0}) Join nearly a million makers, designers, marketers, and business owners using sparrow to build their outstanding websites.
        a.cursor-pointer(href='#!' data-bigpicture!={ytSrc: 'CkBJkE7bb4Y'} )
          svg.mx-auto.d-block(width=50 height=50 xmlns='http://www.w3.org/2000/svg', viewbox='0 0 274.19 274.19' data-zanim-svg!={
            duration: 2,
            ease: "CubicBezier"
          } data-zanim-svg-trigger= 'scroll')
            defs
              style.
                .play-path {
                  fill: none;
                  stroke: #ffffff;
                  stroke-linecap: round;
                  stroke-linejoin: round;
                  stroke-width: 12px;
                }
            g
              path.play-path(d='M208.31,29.4A129.12,129.12,0,1,1,137.1,8m-1.48,170.53L199.94,137,104.07,79.46v113')

    +DownArrow(2, false, 300)
  #target-down

