mixin CafeMenu(title, des)
  h5.text-uppercase.fs-9.fw-bold.mt-4.mb-0!=title
  p=des

mixin CafeHeader
  +Section({
    image: `${CWD}assets/img/headers/header-cafe.jpg`,
    className: "overlay overlay-1",
    attrs: {"data-zanim-xs": {delay: 0.4, animation: "zoom-out"}, "data-zanim-trigger": "scroll"}
  }, "container overflow-hidden").py-0#cafeHeader
    div(data-zanim-timeline!={delay: 0.6} data-zanim-trigger="scroll")
      .row.min-vh-100.flex-center.py-8.text-center
        .col-lg-8
          .overflow-hidden
            h1.text-white.fs-6.fs-sm-5.fs-lg-4.px-2.px-lg-0.text-smallcaps.display-4(data-parallax data-rellax-speed=5)
              span.overflow-hidden.d-block
                span.d-inline-block(data-zanim-xs!={delay: 0.1}) Laugh Dream Clap
              span.overflow-hidden.d-block
                span.d-inline-block(data-zanim-xs!={delay: 0.2}) Share Forgive
              span.overflow-hidden.d-block
                span.d-inline-block(data-zanim-xs!={delay: 0.3}) Celebrate Love
          .overflow-hidden(data-parallax data-rellax-speed=3)
            h5.fs-9.fs-sm-8.mt-3.mt-md-5.text-white(data-zanim-xs!={delay: 0.4}) welcome to your cafe sparrow.
    +DownArrow(2)
  #target-down

