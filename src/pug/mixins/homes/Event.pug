mixin EventHeader
  +Section({
    image: `${CWD}assets/img/headers/header-event.jpg`,
    youtube: {
      videoId: '67Mlgq6-dGA',
      startSeconds: 134,
      endSeconds: 380,      
    },
    attrs: {"data-zanim-md": {delay: 0.0, animation: "zoom-out"}, "data-zanim-trigger": "scroll"}
  }).py-0
    .row.min-vh-100.align-items-end.py-8

    a.absolute-horizontal-centered.overflow-hidden.bottom-0.p-4(href="#arrow-down"  data-zanim-timeline!={} data-zanim-trigger="scroll")
      span.fas.fa-chevron-down.text-white.fs-7(data-zanim-xs!={
        delay: 1,
        animation: "slide-down"
      })

  #arrow-down

