mixin ScrollspyDemo
  -
    var sections = [
      {
        title:'Section One',
        href: 'section-one'
      },
      {
        title:'Section Two',
        href: 'section-two'
      },
      {
        title:'Section Three',
        href: 'section-three'
      },
      {
        title:'Section Four',
        href: 'section-four'
      },
    ]
    
  .row
    .col-lg-3
      .sticky-top.pt-3.mb-3
        #v-pills.nav.flex-column.nav-pills
          each section in sections
            a.nav-link(href=`#v-pills-${section.href}`).ps-0.ps-sm-3 #{section.title}
          
    .col
      each section, index in sections
        +SpyExampleItem(section, index)


