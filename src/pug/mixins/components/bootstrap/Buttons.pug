mixin SolidButtonsExample 
  h5.mt-4(data-anchor) Solid Buttons
  .row.mt-3
    each val in themeColors
      .col-lg-3.col-md-4.col-sm-6.d-grid.mb-3
        a(href='#!' class=`btn-${val}`).btn=val

  h5.mt-4 HTML
  +ComponentCardLib 
    a(href='#!' class="btn btn-primary") Solid Button
  

mixin OutlineButtonsExample
  h5.mt-4(data-anchor)  Outline Buttons
  .row.mt-3
    each val in themeColors
      .col-lg-3.col-md-4.col-sm-6.d-grid.mb-3
        a(href='#!' class=`btn-outline-${val}`).btn=val

  h5.mt-4 HTML
  +ComponentCardLib 
    a(href='#!' class="btn btn-outline-primary") Outline Button
  

mixin ButtonSizesDemo
  h4.mt-5(data-anchor) Buttons Sizes
  p
    | Customize the size of a button using 
    code .btn-xs
    | , 
    code .btn-sm
    |  and 
    code .btn-lg
  .row.gy-3.mt-3
    .col-lg-3.col-md-4.col-sm-6
      a(href='#!').btn.btn-outline-primary.btn-xs.d-block .btn-xs
    .col-lg-3.col-md-4.col-sm-6
      a(href='#!').btn.btn-outline-primary.btn-sm.d-block .btn-sm
    .col-lg-3.col-md-4.col-sm-6
      a(href='#!').btn.btn-outline-primary.d-block .btn
    .col-lg-3.col-md-4.col-sm-6
      a(href='#!').btn.btn-outline-primary.btn-lg.d-block .btn-lg

