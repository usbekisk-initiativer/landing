mixin FormsStandardInput
  h4 Standard Inputs
  form.mt-4
    .mb-3
      label(for='exampleInputEmail1') Email address
      input#exampleInputEmail1.form-control(type='email', aria-describedby='emailHelp', placeholder='Enter email')
      small#emailHelp.form-text.text-body-tertiary We'll never share your email with anyone else.
    .mb-3
      label(for='exampleInputPassword1') Password
      input#exampleInputPassword1.form-control(type='password', placeholder='Password')
    .mb-3.form-check
      input#exampleCheck1.form-check-input(type='checkbox')
      label.form-check-label(for='exampleCheck1') Check me out
    .mb-3
      label(for='exampleFormControlInput1') Email address
      input#exampleFormControlInput1.form-control(type='email', placeholder='name@example.com')
    .mb-3
      label(for='exampleFormControlSelect1') Example select
      select#exampleFormControlSelect1.form-control
        option 1
        option 2
        option 3
        option 4
        option 5
    .mb-3
      label(for='exampleFormControlSelect2') Example multiple select
      select#exampleFormControlSelect2.form-control(multiple='')
        option 1
        option 2
        option 3
        option 4
        option 5
    .mb-3
      label(for='exampleFormControlTextarea1') Example textarea
      textarea#exampleFormControlTextarea1.form-control(rows='3')
    .mb-3
      label.form-label(for='exampleFormControlFile1') Example file input
      input.form-control.form-control-sm#exampleFormControlFile1(type='file')    
    .mb-3
      label.form-label(for='formControlRange') Example Range input
      input#formControlRange.form-range(type='range')
    input.form-control(type='text', placeholder='Readonly input hereâ€¦', readonly)
    .form-check.mt-4
      input#defaultCheck1.form-check-input(type='checkbox', value='')
      label.form-check-label(for='defaultCheck1')
        | Default checkbox
    .form-check
      input#defaultCheck2.form-check-input(type='checkbox', value='', disabled='')
      label.form-check-label(for='defaultCheck2')
        | Disabled checkbox
    .form-check.mt-4
      input#exampleRadios1.form-check-input(type='radio', name='exampleRadios', value='option1', checked='')
      label.form-check-label(for='exampleRadios1')
        | Default radio
    .form-check
      input#exampleRadios2.form-check-input(type='radio', name='exampleRadios', value='option2')
      label.form-check-label(for='exampleRadios2')
        | Second default radio
    .form-check.disabled
      input#exampleRadios3.form-check-input(type='radio', name='exampleRadios', value='option3', disabled='')
      label.form-check-label(for='exampleRadios3')
        | Disabled radio

mixin FormValidation
  h4.mt-6 Validation
  form.row.g-3.needs-validation.mt-4(novalidate)
    .col-md-4
      label.form-label(for='validationCustom01') First name
      input#validationCustom01.form-control.form-control-sm(type='text', placeholder='First name', value='Mark', required='')
      .valid-feedback
        | Looks good!
    .col-md-4
      label.form-label(for='validationCustom02') Last name
      input#validationCustom02.form-control.form-control-sm(type='text', placeholder='Last name', value='Otto', required='')
      .valid-feedback
        | Looks good!
    .col-md-4
      label.form-label(for='validationCustomUsername') Username
      .input-group.input-group-sm.has-validation
        span#inputGroupPrepend.input-group-text @
        input#validationCustomUsername.form-control.form-control-sm(type='text', placeholder='Username', aria-describedby='inputGroupPrepend', required='')
        .invalid-feedback
          | Please choose a username.
    .col-md-6
      label.form-label(for='validationCustom03') City
      input#validationCustom03.form-control.form-control-sm(type='text', placeholder='City', required='')
      .invalid-feedback
        | Please provide a valid city.
    .col-md-3
      label.form-label(for='validationCustom04') State
      input#validationCustom04.form-control.form-control-sm(type='text', placeholder='State', required='')
      .invalid-feedback
        | Please provide a valid state.
    .col-md-3
      label.form-label(for='validationCustom05') Zip
      input#validationCustom05.form-control.form-control-sm(type='text', placeholder='Zip', required='')
      .invalid-feedback
        | Please provide a valid zip.
    .col-12
      .form-check
        input#invalidCheck.form-check-input(type='checkbox', value='', required='')
        label.form-check-label(for='invalidCheck')
          | Agree to terms and conditions
        .invalid-feedback
          | You must agree before submitting.
    .col-12
      button.btn.btn-primary.btn-sm(type='submit') Submit form

