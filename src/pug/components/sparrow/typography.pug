  +TypographyParagraph

  +TypographyFontStylesDemo

  +ComponentCard({
    title: 'Colors',
    description: `Use the following colors to change the text color`,
    descriptionClass: 'mb-5',
    prismClass: 'mt-5'
    
  }).mt-6
    +TypographyColorsDemo 

