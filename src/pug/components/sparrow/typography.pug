  - var activePage = 'typography';

block component 

  +TypographyFontFamily

  +ComponentCard({
    title: 'Headings',
    description: `<strong>${name} </strong> has all the html headings, <code>&lt;h1&gt;</code> through <code>&lt;h6&gt;</code>, styled for you. Also you can use <code>.h1</code> through <code>.h6</code> classes when you want to match the font styling of a heading but still want your text to be displayed inline. `,
    descriptionClass: 'mb-5',
    prismClass: 'mt-5'

  }).mt-6
